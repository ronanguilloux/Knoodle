<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Knoodle Â» {% block title %}In surveys we trust{% endblock %}</title>
    <link rel="stylesheet" media="all" href="{{ asset('bundles/knpknoodle/css/style.css') }}" />
</head>
<body>
    <div id="header">
        <div class="wrap">
            <h1><a href="{{ path('knoodle_index') }}"><img src="{{ asset('bundles/knpknoodle/images/logo.png') }}" alt="Knoodle" /></a></h1>
            <h2>{% block pageTitle%}{{ block('title') }}{% endblock %}</h2>
            {% include 'KnpKnoodleBundle::_search_form.html.twig' %}
        </div>
    </div>

    {% block search_form %}
        {% include 'KnpKnoodleBundle::_menu.html.twig' %}
    {% endblock %}

    {% if app.session.flashbag.keys %}
    <div id="flashes">
        {% for name, message in app.session.flashbag.all %}
            <div class="flash {{ name }}">
                {{  message|join(',') }}
            </div>
        {% endfor %}
    </div>
    {% endif %}
    <div id="content">
        <div class="wrap">
            {% block content %}{% endblock %}
        </div>
    </div>
    <div id="footer" class="wrap">
        <p>Knoodle - {% block footerTitle %}{{ block('title') }}{% endblock %}</p>
        {{ render(controller('KnpKnoodleBundle:Survey:latest', {'limit': 5} )) }}
    </div>
</body>
</html>

