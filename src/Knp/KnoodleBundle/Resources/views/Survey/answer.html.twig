{% extends 'KnpKnoodleBundle::layout.html.twig' %}
{% block content %}
    <div id="answer-new">
        <h3>New Answer</h3>
        <h4>{{ survey.name }}</h4>
        <form action="" method="post">
            <fieldset class="author">
                <legend><h4>Author</h4></legend>
                <div class="question">
                    <input type="text" name="author_first_name" />
                    <label for="author_first_name">First name</label>
                </div>
                <div class="question">
                    <input type="text" name="author_last_name" />
                    <label for="author_last_name">Last name</label>
                </div>
                <div class="question">
                    <input type="text" name="author_email" />
                    <label for="author_email">Email</label>
                </div>
            </fieldset>
            {% for question in survey.getQuestions %}
                <fieldset>
                    <legend><h4>{{ question.sentence }}</h4></legend>
                    <div class="question">
                        <input type="radio" id="question_{{ question.id }}_first_choice" name="question_{{ question.id }}" value="1">
                        <label for="question_{{ question.id }}_first_choice">{{ question.firstChoice }}</label>
                    </div>
                    <div class="question">
                        <input type="radio" id="question_{{ question.id }}_second_choice" name="question_{{ question.id }}" value="2">
                        <label for="question_{{ question.id }}_second_choice">{{ question.secondChoice }}</label>
                    </div>
                    <div class="question">
                        <input type="radio" id="question_{{ question.id }}_third_choice" name="question_{{ question.id }}" value="3">
                        <label for="question_{{ question.id }}_third_choice">{{ question.thirdChoice }}</label>
                    </div>
                </fieldset>
            {% endfor %}
            <button type="submit" class="button">Validate</button>
            or
            <a href="{{ path('knoodle_show', {'id': survey.id}) }}">Cancel</a>
        </form>
    </div>
{% endblock %}
